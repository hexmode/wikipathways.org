# Short url for wiki pages
RewriteRule ^/?wiki/?(.*)$ %{DOCUMENT_ROOT}/w/index.php [L]

# Redirect / to Main Page
RewriteRule ^/?(wiki)?$ %{DOCUMENT_ROOT}/w/index.php [L]

# Redirect / to Main Page
RewriteRule ^/?index.php/(.*) /wiki/$1 [R,L]
RewriteRule ^/?index.php(.*) /w/index.php [R]




